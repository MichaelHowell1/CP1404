BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: 'Enter number'
            font_size: 48
            on_text: app.handle_conversion(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 36
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 36
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_conversion(input_number.text)
    Label:
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)